<ck:CKWindow x:Class="ScrollerVizualizer.Vizualization"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:n="clr-namespace:ScrollerVizualizer"
            xmlns:h="clr-namespace:HighlightModel;assembly=HighlightModel"
            xmlns:ck="clr-namespace:CK.Windows;assembly=CK.Windows.Core"
            mc:Ignorable="d"
            WindowStyle="None"
            AllowsTransparency="True"
            Background="Transparent"

            d:DesignHeight="100" MinWidth="0" MinHeight="220"
        >
    <Grid>
        <StackPanel >
            <ItemsControl ItemsSource="{Binding Elements}" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" >
                            
                        </StackPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#427fbb" Background="White" BorderThickness="2" CornerRadius="4" Height="200" MinWidth="200" Margin="10 0 10 0">
                            <Border.Style>
                                <Style>
                                    <Style.Triggers>
                                        
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Height="200" >
                                <Image Source="{Binding ImageSource}" Height="140" Margin="5" />
                                <Border Background="#427fbb" HorizontalAlignment="Stretch" Height="50" BorderThickness="0">
                                    <TextBlock Text="{Binding Name}" Foreground="White" VerticalAlignment="Center" Padding="10 0 10 0" />
                                </Border>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
        </ItemsControl>  
        </StackPanel>
    </Grid>
</ck:CKWindow>

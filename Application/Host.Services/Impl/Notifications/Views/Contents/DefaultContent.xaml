<UserControl x:Class="Host.Services.DefaultContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="350"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Vertical">
        <TextBlock FontWeight="Bold" Margin="0 0 0 5" x:Name="_title"></TextBlock>
        <TextBlock TextWrapping="Wrap" FontWeight="DemiBold" x:Name="_content"></TextBlock>
    </StackPanel>
</UserControl>

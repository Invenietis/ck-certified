                </Grid.RowDefinitions>

                <Label x:Uid="appinfo-context-path" Grid.Column="0" Grid.Row="0">ContextPath</Label>
                <Label x:Uid="appinfo-user-config-path" Grid.Column="0" Grid.Row="2">UserConfigurationPath</Label>
                <Label x:Uid="appinfo-system-config-path" Grid.Column="0" Grid.Row="4">SystemConfigurationPath</Label>

                <Label Grid.Column="1" Grid.Row="0" Content="{Binding ContextPath}" FontWeight="DemiBold"/>

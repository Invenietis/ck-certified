                                        <ContentPresenter Content="Address : " />
                                        <ContentPresenter Content="{Binding Current.Address}" />
                                    </StackPanel>
                                </StackPanel>
                            </ComboBox.ToolTip>
                        </ComboBox>
                    <Image DockPanel.Dock="Right" Stretch="None" Source="{Binding ImagePath}" />

<Window x:Class="CK.Plugins.AutoClick.Views.WPFStdClickTypeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Topmost="True"
    Title="Auto click"
    WindowStyle="None"     
    ShowInTaskbar="False"
    Background="Transparent"
    xmlns:views="clr-namespace:CK.Plugins.AutoClick.Views">
    <Window.Resources>           
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary 
                  Source="Dictionnaries/AutoClick.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid> 
        <Viewbox Stretch="Fill">
            <Border>
                <ContentControl Template="{DynamicResource AutoClickTemplate}"/>      
            </Border>
        </Viewbox>
    </Grid>
</Window>
